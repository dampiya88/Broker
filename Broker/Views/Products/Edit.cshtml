                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedBy" class="control-label">Created By</label>
                <input asp-for="CreatedBy" class="form-control" ReadOnly="true"/>
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastUpdateDate" class="control-label">Last Update Date</label>
                <input type="date" asp-for="LastUpdateDate" class="form-control"ReadOnly="true" />
                <span asp-validation-for="LastUpdateDate" class="text-danger"></span>
