                <label asp-for="ApplicationNumber" class="control-label">Application Number</label>
                <input asp-for="ApplicationNumber" class="form-control" />
                <span asp-validation-for="ApplicationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFunded" class="control-label">Date Funded</label>
                <input type="date"asp-for="DateFunded" class="form-control" />
                <span asp-validation-for="DateFunded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowerName" class="control-label">Borrower Name</label>
                <input asp-for="BorrowerName" class="form-control" />
                <span asp-validation-for="BorrowerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionType" class="control-label">Transaction Type</label>
