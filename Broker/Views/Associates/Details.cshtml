@model Broker.ViewModels.AssociateProductViewModel

@{
    ViewData["Title"] = "Details";
}

<h4>Associate Details</h4>
<dl class="row">
    <dt class="col-sm-2">
        <label>ID</label>
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Associate.AssociateId)
    </dd>
    <dt class="col-sm-2">
        <label>Name</label>
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Associate.AssociateFirstName)
        @Html.DisplayFor(model => model.Associate.AssociateLastName)
    </dd>
    <dt class="col-sm-2">
        <label>Company</label>
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Associate.Company)
    </dd>
    <dt class="col-sm-2">
        <label>Commission Split</label>
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CommissionSplit.AssociateSplitPortion)
    </dd>
</dl>

<table class="table">
    <thead>
        <tr>
            <th>
                <label>Mortgage Application</label>
            </th>
            @*<th>
                <label>Associate Id</label>
            </th>*@
            <th>
                <label>Mortgage Amount</label>
            </th>
            <th>
                <label>Total File Commissions</label>
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationNumber)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.AssociateId)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.MortgageAmount)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.TotalFileCommissions)
                </td>

            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>
